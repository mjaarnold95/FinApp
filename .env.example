# Database Configuration
DATABASE_URL=postgresql+psycopg://finapp:finapp@localhost:5432/finapp

# API Configuration
API_PREFIX=/api/v1
PROJECT_NAME=FinApp
VERSION=0.1.0

# Security (CHANGE THESE IN PRODUCTION!)
# Generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production-to-something-secure
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS - Set to specific origins in production, e.g.: http://localhost:3000,https://yourdomain.com
CORS_ORIGINS=*

# Plaid Integration (get credentials from https://plaid.com)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENVIRONMENT=sandbox
PLAID_REDIRECT_URI=http://localhost:3000/plaid/callback

# Environment - Set to 'production' in production to enable security validation
ENVIRONMENT=development
